<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="SM_Blog::blog_manager" title="Blog" translate="title" sortOrder="10">
                    <resource id="SM_Blog::view" title="View" translate="title" sortOrder="10" />
                    <resource id="SM_Blog::save" title="Save" translate="title" sortOrder="20" />
                    <resource id="SM_Blog::delete" title="Delete" translate="title" sortOrder="30" />
                    <resource id="SM_Blog::massUpdate" title="Mass Update" translate="title" sortOrder="40" />
                    <resource id="SM_Blog::massDelete" title="Mass Delete" translate="title" sortOrder="50" />
                    <resource id="SM_Blog::categories" title="Categories" translate="title" sortOrder="60">
                        <resource id="SM_Blog::category_view" title="View" translate="title" sortOrder="10" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>

